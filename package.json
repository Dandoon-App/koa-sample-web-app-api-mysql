{
  "name": "koa-sample-web-app-api-mysql",
  "description": "Koa Sample App (handlebars templating + RESTful API using MySQL, on Node.js)",
  "author": "Chris Veness",
  "license": "MIT",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "http://github.com/chrisveness/koa-sample-web-app-api-mysql.git"
  },
  "main": "app.js",
  "scripts": {
    "start": "forever --minUptime 1000 --spinSleepTime 1000 -c 'node -r esm' app.js",
    "start-dev": "nodemon -e js,json,html -r dotenv/config -r esm app.js",
    "start-devtools": "nodemon --inspect -e js,json,html -r dotenv/config -r esm app.js",
    "test": "npm run test-node && npm run test-frontend",
    "test-node": "mocha --exit -r esm test/*/*.js",
    "test-frontend": "node -r dotenv/config -r esm app.js & pid=$!; cypress run; status=$?; kill -9 $pid; rm -r ./cypress; exit $status",
    "lint": "eslint --ignore-pattern app-api/apidoc .",
    "cover": "nyc --reporter=html npm test; rm -r ./.nyc_output",
    "apidoc": "apidoc -i app-api -o app-api/apidoc/apidoc"
  },
  "engines": {
    "node": "^10.5.0"
  },
  "dependencies": {
    "dateformat": "^3.0.3",
    "debug": "^4.1.0",
    "esm": "^3.0.84",
    "forever": "^0.15.3",
    "fs-extra": "^7.0.1",
    "handlebars": "^4.0.12",
    "html-to-text": "^4.0.0",
    "isemail": "^3.2.0",
    "js-yaml": "^3.12.0",
    "jsdom": "^13.0.0",
    "jsonwebtoken": "^8.4.0",
    "koa": "^2.6.2",
    "koa-body": "^4.0.4",
    "koa-compose": "^4.1.0",
    "koa-compress": "^3.0.0",
    "koa-convert": "^1.2.0",
    "koa-flash": "^1.0.0",
    "koa-handlebars": "^2.0.0",
    "koa-lusca": "^2.2.0",
    "koa-router": "^7.4.0",
    "koa-session": "^5.10.0",
    "koa-static": "^5.0.0",
    "markdown-it": "^8.4.2",
    "mongodb": "^3.1.10",
    "mysql2": "^1.6.4",
    "node-fetch": "^2.3.0",
    "nodejs-info": "^1.2.0",
    "nodemailer": "^4.7.0",
    "nyc": "^13.1.0",
    "scrypt-kdf": "^2.0.0",
    "useragent": "^2.3.0",
    "xmlify": "^1.1.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.7",
    "chai": "^4.2.0",
    "cypress": "^3.1.2",
    "dotenv": "^6.1.0",
    "eslint": "^5.9.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.7",
    "npm-check": "^5.9.0",
    "npm-check-updates": "^2.15.0",
    "supertest": "^3.3.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
      "array-bracket-spacing": [ "error", "always" ],
      "comma-dangle": [ "error", "always-multiline" ],
      "comma-spacing": [ "error" ],
      "curly": [ "error", "multi-line" ],
      "indent": [ "error", 4, { "SwitchCase": 1 } ],
      "key-spacing": [ "error", { "align": "value" } ],
      "keyword-spacing": [ "error" ],
      "no-case-declarations": "off",
      "no-console": [ "warn", { "allow": [ "error", "info" ] } ],
      "no-redeclare": "warn",
      "no-shadow": "warn",
      "no-unused-vars": "warn",
      "no-var": "error",
      "object-curly-spacing": [ "error", "always" ],
      "prefer-const": "error",
      "quotes": [ "error", "single", "avoid-escape" ],
      "require-await": "error",
      "semi": [ "error", "always" ],
      "space-before-blocks": [ "error", "always" ],
      "space-in-parens": [ "error" ],
      "strict": [ "error", "global" ]
    }
  }
}
